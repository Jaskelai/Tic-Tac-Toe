<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="400.0" styleClass="background" stylesheets="@../css/style.css"
          xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="tictactoe.client.controller.PaintController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="94.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="247.0" minHeight="10.0" prefHeight="247.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label stylesheets="@../css/style.css" text="Нарисуй фигуру" textFill="WHITE" GridPane.halignment="CENTER"/>
    <Button mnemonicParsing="false" onAction="#onBtnStartClicked" styleClass="label-start" text="Теперь точно играть"
            GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
    <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" styleClass="canvas"
               stylesheets="@../css/style.css" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <children>
            <Canvas fx:id="canvas" height="200.0" nodeOrientation="RIGHT_TO_LEFT" styleClass="canvas" width="200.0"
                    StackPane.alignment="CENTER">
                <StackPane.margin>
                    <Insets/>
                </StackPane.margin>
            </Canvas>
        </children>
    </StackPane>
    <ColorPicker fx:id="colorPicker" prefHeight="31.0" prefWidth="57.0" GridPane.halignment="CENTER"
                 GridPane.rowIndex="1"/>
</GridPane>
