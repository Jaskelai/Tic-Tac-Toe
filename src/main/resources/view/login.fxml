        <Label stylesheets="@../css/style.css" text="ПОЧТИ КРЕСТИКИ-НОЛИКИ" textFill="WHITE" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
